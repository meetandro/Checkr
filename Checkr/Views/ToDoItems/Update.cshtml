@model ToDoItemDto
@{
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card card-custom p-4 border-0 shadow-lg text-white">
        <form asp-controller="ToDoItems" asp-action="Update" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CardId" />
            <div class="form-group">
                <label asp-for="Content" class="form-label">ToDoItem Content</label>
                <input asp-for="Content" class="form-control bg-dark text-white" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="IsCompleted" class="form-label">Is Completed</label>
                <input type="checkbox" asp-for="IsCompleted" class="form-check-input bg-dark">
                <span asp-validation-for="IsCompleted" class="text-danger"></span>
            </div>
            <hr>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark">Update ToDoItem</button>
            </div>
        </form>
    </div>
</div>
