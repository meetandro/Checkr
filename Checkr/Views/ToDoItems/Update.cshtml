@model ToDoItemDto
@{
}

<form asp-controller="ToDoItems" asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CardId" />
    <div class="form-group">
        <label asp-for="Content">ToDoItem Content</label>
        <input asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsCompleted">Is Completed</label>
        <input type="checkbox" asp-for="IsCompleted" class="form-check-input" />
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Update ToDoItem</button>
</form>
