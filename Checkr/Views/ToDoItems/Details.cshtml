@model ToDoItem

<div class="card mt-4 mb-4 shadow-sm bg-dark text-light">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            @if (Model.IsCompleted)
            {
                <h5 class="card-title text-decoration-line-through">@Model.Content</h5>
            }
            else
            {
                <h5 class="card-title">@Model.Content</h5>
            }
        </div>
        <div class="dropdown mx-3">
            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="dropdownMenuButton">
                <li>
                    <a asp-controller="ToDoItems" asp-action="Update" asp-route-id="@Model.Id" class="dropdown-item bg-dark text-light">Update ToDoItem <i class="bi bi-pencil"></i></a>
                </li>
                <li>
                    <hr class="dropdown-divider border-light">
                </li>
                <li>
                    <form asp-controller="ToDoItems" asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item text-danger bg-dark">Delete ToDoItem <i class="bi bi-trash"></i></button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>
