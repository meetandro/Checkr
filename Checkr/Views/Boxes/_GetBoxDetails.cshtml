@model Box
@{
}

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.BoxName</h5>
            <div class="btn-group-vertical w-100">
                <form asp-controller="Boxes" asp-action="UpdateBox" asp-route-id="@Model.Id" method="get" class="mb-1">
                    <button type="submit" class="btn btn-outline-primary w-100">Update Box</button>
                </form>
                <form asp-controller="Boxes" asp-action="DeleteBox" asp-route-id="@Model.Id" asp-route-boardId="@Model.BoardId" method="post">
                    <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Confirm?')">Delete Box</button>
                </form>
                @foreach (var card in Model.Cards)
                {
                    <partial name="/Views/Cards/_GetCardDetails.cshtml" model="card" />
                }
                <form asp-controller="Cards" asp-action="AddCard" method="get">
                    <input type="hidden" name="boxId" value="@Model.Id">
                    <button type="submit" class="btn btn-outline-info">Add Card</button>
                </form>
            </div>
        </div>
    </div>
</div>
