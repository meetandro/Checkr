@model InvitationDto
@{
}

<form asp-controller="Invitations" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <span asp-validation-for="RecipientEmail" class="text-danger"></span>
    <input type="hidden" asp-for="BoardId" />
    <div class="form-group">
        <label asp-for="RecipientEmail">Email</label>
        <input type="text" asp-for="RecipientEmail" class="form-control bg-dark text-white">
    </div>
    <div class="d-flex justify-content-center mt-2">
        <button type="submit" class="btn btn-secondary">Invite User</button>
    </div>
</form>
