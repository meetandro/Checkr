@model TagDto
@{
}

<h1>Create Tag</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Tags" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BoardId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hex" class="control-label"></label>
                <input type="color" asp-for="Hex" />
                <span asp-validation-for="Hex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
