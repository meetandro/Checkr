@model TagDto
@{
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card card-custom p-4 border-0 shadow-lg text-white">
        <h1 class="text-center">@Model.Name</h1>
        <form asp-controller="Tags" asp-action="Update" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name" class="form-label">Tag Name</label>
                <input value="@Model.Name" asp-for="Name" class="form-control bg-dark text-white">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Hex" class="form-label">Tag Hex</label>
                <input type="color" value="@Model.Hex" asp-for="Hex" class="form-control form-control-color bg-dark text-white">
                <span asp-validation-for="Hex" class="text-danger"></span>
            </div>
            <hr>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark">Update Tag</button>
            </div>
        </form>
    </div>
</div>
