@model Tag
@{
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="card card-custom p-4 border-0 shadow-lg text-white">
        <button class="btn btn-secondary btn-sm dropdown-toggle" style="background: @Model.Hex" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            @Model.Name
        </button>
        <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="dropdownMenuButton">
            <li>
                <a asp-controller="Tags" asp-action="Update" asp-route-id="@Model.Id" class="dropdown-item text-light bg-dark">Update @Model.Name <i class="bi bi-pencil"></i></a>
            </li>
            <li>
                <form asp-controller="Tags" asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this tag?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item text-danger bg-dark">Delete @Model.Name <i class="bi bi-trash"></i></button>
                </form>
            </li>
        </ul>
    </div>
</div>
