@model IEnumerable<Board>

@{
    ViewData["Title"] = "Boards";
}

<h1 class="text-center mt-3 mb-4">Boards</h1>

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var board in Model)
            {
                <div class="col-md-4">
                    <a asp-action="Details" asp-route-id="@board.Id" class="text-decoration-none">
                        <div class="card mb-3 shadow-sm bg-dark text-light compact-card board-container p-2">
                            <div class="card-body position-relative">
                                <h5 class="card-title">@board.Name</h5>
                                <div class="dropdown position-absolute top-0 end-0">
                                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <form asp-action="Details" asp-route-id="@board.Id" method="get" class="mb-1">
                                                <button type="submit" class="dropdown-item bg-dark text-light">Details</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="Users" asp-route-id="@board.Id" method="get" class="mb-1">
                                                <button type="submit" class="dropdown-item bg-dark text-light">View Members</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="Update" asp-route-id="@board.Id" method="get" class="mb-1">
                                                <button type="submit" class="dropdown-item bg-dark text-light">Update</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="LeaveBoard" asp-route-id="@board.Id" method="post" class="mb-1">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item bg-dark text-danger" onclick="return confirm('Confirm?')">Leave Board</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@board.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item bg-dark text-danger" onclick="return confirm('Confirm?')">Delete</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        <div class="col-md-4 p-2">
            <a asp-controller="Boards" asp-action="Create" class="text-decoration-none">
                <div class="card mb-3 shadow-sm bg-dark text-light compact-card">
                    <div class="card-body d-flex justify-content-center align-items-center">
                        <span class="lead fw-bold">Add Board</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
