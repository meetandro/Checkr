@model IEnumerable<Board>

@{
    ViewData["Title"] = "Boards";
}

<h1 class="text-center mt-3 mb-4">Boards</h1>

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var board in Model)
            {
                <div class="col-md-4">
                    <a asp-action="Details" asp-route-id="@board.Id" class="text-decoration-none">
                        <div class="card mb-3 shadow-sm bg-dark text-light compact-card">
                            <div class="card-body position-relative">
                                <h5 class="card-title">@board.Name</h5>
                                <div class="dropdown position-absolute top-0 end-0">
                                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <form asp-action="Details" asp-route-id="@board.Id" method="get" class="mb-1">
                                                <button type="submit" class="dropdown-item">Details</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="Users" asp-route-id="@board.Id" method="get" class="mb-1">
                                                <button type="submit" class="dropdown-item">View Members</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="Update" asp-route-id="@board.Id" method="get" class="mb-1">
                                                <button type="submit" class="dropdown-item">Update</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="LeaveBoard" asp-route-id="@board.Id" method="post" class="mb-1">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Confirm?')">Leave Board</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@board.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Confirm?')">Delete</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        <div class="col-md-4">
            <a asp-controller="Boards" asp-action="Create" class="text-decoration-none">
                <div class="card mb-3 shadow-sm bg-dark text-light compact-card">
                    <div class="card-body d-flex justify-content-center align-items-center">
                        <span class="lead fw-bold">Add Board</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #2b2b2b;
        color: #d0d0d0;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #fff;
    }

    .card {
        background-color: #333;
        border: 1px solid #444;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            z-index: 1000;
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .card-title,
    .card-text {
        color: #fff;
    }


    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .compact-card {
        padding: 10px;
    }

        .compact-card .card-body {
            padding: 15px;
        }

        .compact-card .btn {
            padding: 5px 10px;
        }

        .dropdown-toggle{
            position: relative;
            z-index: 1;
        }

    .dropdown-toggle::after {
        display: none;
    }
</style>
