@{
}

<form asp-controller="Boards" asp-action="AddUserToBoard" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" value="@ViewData["BoardId"]" name="id" />
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" id="Email" name="email" class="form-control bg-dark text-white" required>
    </div>
    <div class="d-flex justify-content-center mt-2">
        <button type="submit" class="btn btn-secondary">Add User</button>
    </div>
</form>
