@model Board
@{
}

<h1>All Members for Board: @Model.BoardName</h1>

@if (Model.Users.Any())
{
    <ul>
        @foreach (var user in Model.Users)
        {
            if (Model.OwnerId == user.Id)
            {
                <li>@user.UserName (Owner)</li>
            }
            else
            {
                <div class="d-flex">
                    <li>@user.UserName</li>
                    <form asp-action="RemoveUserFromBoard" asp-route-id="@Model.Id" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-primary btn-sm">Remove Member</button>
                    </form>
                </div>
            }
        }
    </ul>
}
else
{
    <p>No members found for this board.</p>
}

<form asp-action="AddUserToBoard" asp-route-id="@Model.Id" method="get">
    <button type="submit" class="btn btn-primary btn-sm">Add Member</button>
</form>
