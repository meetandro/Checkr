@model Board
@{
}

<h1 class="mt-2">@Model.Name</h1>

<div class="top-0 end-0 p-3">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body d-flex justify-content-center align-items-center">
                <form asp-controller="Boxes" asp-action="Create" method="get">
                    <input type="hidden" name="BoardId" value="@Model.Id">
                    <button type="submit" class="lead fw-bold btn btn-link text-decoration-none">Add Box</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model.Users.Count > 1)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        @foreach (var message in Model.Messages.Reverse())
                        {
                            <p>@message.Content (Sent by @message.User.FirstName)</p>
                            <p>@message.CreatedAt</p>
                        }
                        <form asp-controller="Messages" asp-action="SendMessage" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="BoardId" value="@Model.Id" />
                            <input type="text" name="Content" required />
                            <button type="submit">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        }
        @if (Model.Boxes.Count > 0)
        {
            <div class="box-container">
                @foreach (var box in Model.Boxes)
                {
                    @await Html.PartialAsync("/Views/Boxes/_Details.cshtml", box)
                }
            </div>
        }
    </div>
</div>

<style>
    .box-container {
        display: flex;
        overflow-x: auto;
        white-space: nowrap;
        padding-bottom: 20px;
    }

        .box-container > * {
            flex: 0 0 auto;
        }
</style>

