@model List<Board>

<h1>Boards</h1>

<div class="container">
    <div class="row">
        @if (Model.Count > 0)
        {
            @foreach (var board in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@board.BoardName</h5>
                            <p class="card-text">Owner ID: @board.OwnerId</p>
                            <div class="btn-group-vertical w-100">
                                <form asp-action="GetBoardDetails" asp-route-id="@board.Id" method="get" class="mb-1">
                                    <button type="submit" class="btn btn-primary btn-sm w-100">Details</button>
                                </form>
                                <form asp-action="GetAllUsersForBoard" asp-route-id="@board.Id" method="get" class="mb-1">
                                    <button type="submit" class="btn btn-primary btn-sm w-100">View Members</button>
                                </form>
                                <form asp-action="UpdateBoard" asp-route-id="@board.Id" method="get" class="mb-1">
                                    <button type="submit" class="btn btn-primary btn-sm w-100">Update</button>
                                </form>
                                <form asp-action="LeaveBoard" asp-route-id="@board.Id" method="post" class="mb-1">
                                    <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Confirm?')">Leave Board</button>
                                </form>
                                <form asp-action="DeleteBoard" asp-route-id="@board.Id" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Confirm?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="col-md-4">
            <a asp-controller="Boards" asp-action="AddBoard" class="text-decoration-none">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body d-flex justify-content-center align-items-center">
                        <span class="lead fw-bold">Add Board</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
