@model BoardDto
@{
}

<h1>Add Board</h1>

<form asp-controller="Boards" asp-action="Create" method="post">
    <div class="form-group">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="OwnerId" />
        <label asp-for="Name">Board Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr>
    <button type="submit" class="btn btn-outline-success">Add Board</button>
</form>
